<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CineAntibes.DataTemplates.HomeCell">
    <StackLayout>
        <Image x:Name="icon" Source="{Binding Image}" HeightRequest="75" Aspect="AspectFit" BackgroundColor="Blue" />
        <Label x:Name="title" Text="{Binding Title}" BackgroundColor="Green" HorizontalTextAlignment="Center" />
    </StackLayout>
</ContentView>