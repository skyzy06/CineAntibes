            <Image Source="ic_contact" WidthRequest="50" HeightRequest="50" Grid.Column="3" Grid.Row="1" />
            <Image Source="ic_contact" WidthRequest="50" HeightRequest="50" Grid.Column="0" Grid.Row="2" />
            <Image Source="ic_contact" WidthRequest="50" HeightRequest="50" Grid.Column="1" Grid.Row="2" />
            <Image Source="ic_contact" WidthRequest="50" HeightRequest="50" Grid.Column="2" Grid.Row="2" />
            <cells:HomeCell Image="ic_on_display" Title="Test" Grid.Column="3" Grid.Row="2" />
        </Grid>
    </ScrollView>
</ContentPage>